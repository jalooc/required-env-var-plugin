{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "classes": true,
        "modules": true,
        "experimentalObjectRestSpread": true
    },
    "rules": {
        "strict": 0,
        "indent": [
            2,
            2,
            { "SwitchCase": 1 }
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "windows"
        ],
        "semi": [
            2,
            "never"
        ]
    }
}